<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.getyourgame.Transacao">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="450dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dip"
                android:background="@drawable/borda2">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24dp"
                    android:text=""
                    android:textAlignment="center"
                    android:id="@+id/tvTDescricaoJogoOfert"
                    android:background="@null"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text=""
                    android:textAlignment="center"
                    android:textStyle="italic"
                    android:id="@+id/tvTPlataformaEstadoJogoOfert"
                    android:layout_marginTop="5dp"
                    android:background="@null"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/metodo_envio"
                    android:id="@+id/tvTMetodoEnvioOfert"
                    android:layout_marginTop="15dp"
                    android:background="@null"/>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spTMetodoEnvioOfert"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/holo_blue_dark"
                    android:id="@+id/tvTNomeUsuarioOfert"
                    android:layout_marginTop="15dp"
                    android:background="@null"/>

            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dip"
                    android:layout_height="30dip"
                    android:id="@+id/ivTSetasDuplas"
                    android:src="@drawable/ic_setas_duplas"
                    android:layout_gravity="center_horizontal"
                    />

            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dip"
                android:background="@drawable/borda2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24dp"
                    android:text=""
                    android:textAlignment="center"
                    android:id="@+id/tvTDescricaoJogo"
                    android:background="@null"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text=""
                    android:textAlignment="center"
                    android:textStyle="italic"
                    android:id="@+id/tvTPlataformaEstadoJogo"
                    android:layout_marginTop="5dp"
                    android:background="@null"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/metodo_envio"
                    android:id="@+id/tvTMetodoEnvio"
                    android:layout_marginTop="15dp"
                    android:background="@null"/>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spTMetodoEnvio" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/holo_blue_dark"
                    android:id="@+id/tvTNomeUsuarioSolic"
                    android:layout_marginTop="15dp"
                    android:background="@null"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/alerta_transacao"
                android:textAlignment="center"
                android:textSize="14dp"
                android:textStyle="bold"
                android:id="@+id/tvITAlerta"
                android:layout_marginTop="20dp"/>

        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/recusar_transacao"
        android:id="@+id/btTRecusarTransacao"
        android:layout_gravity="center_horizontal"
        style="@style/botao"
        android:visibility="gone"
        android:layout_above="@+id/btTIniciarTransacao"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/iniciar_transacao"
        android:id="@+id/btTIniciarTransacao"
        android:layout_gravity="center_horizontal"
        style="@style/botao"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enviar_transacao"
        android:id="@+id/btTEnviarTransacao"
        android:layout_gravity="center_horizontal"
        style="@style/botao"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/tvTAguardando"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="@string/aguardando"
        android:id="@+id/tvTAguardando"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:visibility="gone"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancelar_transacao"
        android:id="@+id/btTCancelarTransacao"
        style="@style/botao"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/btTEnviarTransacao"
        android:layout_alignLeft="@+id/btTEnviarTransacao"
        android:layout_alignStart="@+id/btTEnviarTransacao"
        android:layout_alignRight="@+id/btTEnviarTransacao"
        android:layout_alignEnd="@+id/btTEnviarTransacao" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/avaliacao"
        android:id="@+id/btTAvaliacao"
        android:layout_gravity="center_horizontal"
        style="@style/botao"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
