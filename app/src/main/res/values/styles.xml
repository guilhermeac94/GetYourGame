<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@android:color/white</item>
    </style>


    <style name="botao">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">0dp</item>
        <item name="android:minWidth">140dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:background">@drawable/botao</item>
    </style>

    <style name="botaoBranco">
        <item name="android:padding">0dp</item>
        <item name="android:background">@drawable/botao_branco</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="botaoLupa">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:background">@drawable/botao</item>
        <item name="android:width">40dp</item>
        <item name="android:drawableBottom">@android:drawable/ic_menu_search</item>
    </style>

    <style name="textviewLink">
        <item name="android:textStyle"></item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="list">
        <item name="android:background">@drawable/list</item>
        <!--<item name="android:listSelector">@drawable/list_item</item>-->
        <item name="android:dividerHeight">1px</item>
        <item name="android:divider">@android:color/black</item>
    </style>

</resources>
